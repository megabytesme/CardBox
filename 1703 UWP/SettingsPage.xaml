<base:SettingsPageBase
    x:Class="_1703_UWP.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:base="using:Shared_Code_UWP.BasePages"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <StackPanel>
            <TextBlock Text="Settings" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" Foreground="White"/>
            <Button x:Name="ResetAppButton" Content="Reset App" Width="200" HorizontalAlignment="Center" Foreground="Red"/>
            <Button x:Name="ImportCardsButton" Content="Import Cards" Width="200" HorizontalAlignment="Center" Margin="0,10"/>
            <Button x:Name="ExportCardsButton" Content="Export Cards" Width="200" HorizontalAlignment="Center"/>
            <Button x:Name="AboutButton" Content="About" Width="200" HorizontalAlignment="Center" Margin="0,10"/>
            <ProgressRing x:Name="progressRing" IsActive="False" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
        </StackPanel>
    </Grid>
</base:SettingsPageBase>