<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CardBox"
             x:Class="CardBox.MainPage"
             x:Name="mainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <local:NavbarControl Grid.Column="0" Grid.RowSpan="2" />

        <SearchBar Grid.Column="1" Grid.Row="0" Placeholder="Search cards" TextChanged="OnSearchTextChanged" Margin="10"/>

        <CollectionView ItemsSource="{Binding FilteredCards}" Grid.Column="1" Grid.Row="1" Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ScrollView>
                        <StackLayout>
                            <Frame Background="#05FFFFFF" Padding="10">
                                <StackLayout Spacing="10">
                                    <Label Text="{Binding CardName}" />
                                    <Button Text="View Card" Command="{Binding Source={x:Reference mainPage}, Path=BindingContext.ViewCardCommand}" CommandParameter="{Binding .}" Margin="0,10"/>
                                </StackLayout>
                            </Frame>
                            <BoxView HeightRequest="10" Color="Transparent"/>
                        </StackLayout>
                    </ScrollView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
