<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CardBox"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             x:Class="CardBox.CardDetailPage">
    <Grid Padding="20">
        <ScrollView>
            <VerticalStackLayout Spacing="20">
                <Border Stroke="LightGray" StrokeThickness="1" Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="{Binding CardName}" FontSize="28" FontAttributes="Bold" Margin="0,0,0,20" />
                        <Label Text="{Binding CardNickname}" FontSize="20" Margin="0,0,0,10" />
                        <Grid>
                            <Border HeightRequest="200" WidthRequest="200">
                                <zxing:BarcodeGeneratorView
                                            x:Name="barcodeImage"
                                            Value="{Binding CardNumber}" 
                                            Format="{Binding BarcodeFormat}"
                                            HeightRequest="200" 
                                            WidthRequest="200"/>
                            </Border>
                        </Grid>
                        <Label Text="{Binding CardNumber}" FontSize="20" Margin="0,-10" HorizontalOptions="Center" />
                    </VerticalStackLayout>
                </Border>

                <Border Stroke="LightGray" StrokeThickness="1" Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Nearby Locations" FontSize="20" Margin="0,0,0,10" />
                        <ActivityIndicator x:Name="loadingProgressRing" IsRunning="False" IsVisible="False" WidthRequest="40" HeightRequest="40" HorizontalOptions="Center"/>
                        <CollectionView x:Name="locationsListView" HeightRequest="200" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <VerticalStackLayout>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Text="{Binding Name}" FontSize="16" Grid.Row="0" Grid.Column="0" VerticalOptions="Center"/>
                                            <Label Text="{Binding Distance}" FontSize="14" Grid.Row="0" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center"/>
                                            <Label Text="{Binding Address}" FontSize="14" Grid.Row="1" Grid.Column="0" />
                                            <Button Clicked="NavigateToLocation_Click" Text="N" Grid.Row="1" Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center" CornerRadius="4"/>
                                        </Grid>
                                        <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="0,10,0,10"/>
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        <Label x:Name="noLocationsLabel" Text="No nearby locations found." FontSize="16" IsVisible="False" HorizontalOptions="Center"/>
                        <Label x:Name="locationErrorLabel" Text="Could not retrieve location." FontSize="16" IsVisible="False" HorizontalOptions="Center"/>
                        <Label Text="Location data provided by © OpenStreetMap contributors and Nominatim." FontSize="12" Margin="0,0,0,0" HorizontalOptions="End"/>
                    </VerticalStackLayout>
                </Border>
            </VerticalStackLayout>
        </ScrollView>
        <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="End" Spacing="10">
            <Button Text="Edit" Clicked="EditCard_Click" WidthRequest="100" CornerRadius="4"/>
            <Button Text="Delete" Clicked="DeleteCard_Click" WidthRequest="100" TextColor="Red" CornerRadius="4"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
