<Page
    x:Class="_1809_UWP.EditCardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="8">
        <Border Margin="8"
                CornerRadius="8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1">
            <StackPanel Padding="16" Spacing="12">
                <TextBlock Text="Edit Card"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Margin="0,0,0,16"
                           Style="{ThemeResource BaseTextBlockStyle}"/>
                <TextBox Header="Card Name"
                         Text="{Binding CardName, Mode=TwoWay}"
                         Margin="0,0,0,12"
                         CornerRadius="4"/>
                <TextBox Header="Card Nickname"
                         Text="{Binding CardNickname, Mode=TwoWay}"
                         Margin="0,0,0,12"
                         CornerRadius="4"/>
                <TextBox Header="Card Number"
                         Text="{Binding CardNumber, Mode=TwoWay}"
                         Margin="0,0,0,12"
                         CornerRadius="4"/>
                <TextBlock Text="Card Display Type:"
                           Margin="0,0,0,8"
                           Style="{ThemeResource BaseTextBlockStyle}"/>
                <ComboBox x:Name="displayPicker"
                          SelectedItem="{Binding CardType, Mode=TwoWay}"
                          Margin="0,0,0,20"
                          CornerRadius="4"/>
                <Button Content="Save"
                        Click="SaveCard_Click"
                        HorizontalAlignment="Right"
                        CornerRadius="4"
                        Width="100"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>