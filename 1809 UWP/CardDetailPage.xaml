<Page
    x:Class="_1809_UWP.CardDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_1809_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="8" Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Margin="8" Grid.Row="0">
            <StackPanel Spacing="12">

                <Border CornerRadius="8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <StackPanel Padding="16" Spacing="12">
                        <TextBlock Text="{Binding CardName}"
                                   FontSize="24"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"
                                   Style="{ThemeResource BaseTextBlockStyle}"/>
                        <TextBlock Text="{Binding CardNickname}"
                                   FontSize="16"
                                   Margin="0,0,0,12"
                                   Style="{ThemeResource BodyTextBlockStyle}"/>
                        <Grid HorizontalAlignment="Center">
                            <Border Height="180" Width="180" CornerRadius="8"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                <Image x:Name="barcodeImage" Stretch="Fill"
                                       Height="180" Width="180"/>
                            </Border>
                        </Grid>
                        <TextBlock Text="{Binding CardNumber}"
                                   FontSize="16"
                                   Margin="0,-8,0,0"
                                   HorizontalAlignment="Center"
                                   Style="{ThemeResource BodyTextBlockStyle}"/>
                    </StackPanel>
                </Border>

                <Border CornerRadius="8"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <StackPanel Padding="16" Spacing="6">
                        <TextBlock Text="Nearby Locations"
                                   FontSize="20"
                                   Style="{ThemeResource SubtitleTextBlockStyle}"/>
                        <ProgressRing x:Name="loadingProgressRing"
                                      IsActive="False"
                                      Visibility="Collapsed"
                                      Width="32"
                                      Height="32"
                                      HorizontalAlignment="Center"/>
                        <ListView x:Name="locationsListView"
                                  Height="200"
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Spacing="8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="16"
                                                       Grid.Row="0"
                                                       Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Style="{ThemeResource BaseTextBlockStyle}"/>
                                            <TextBlock Text="{Binding Distance}"
                                                       FontSize="14"
                                                       Grid.Row="0"
                                                       Grid.Column="1"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Center"
                                                       Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <TextBlock Text="{Binding Address}"
                                                       FontSize="14"
                                                       Grid.Row="1"
                                                       Grid.Column="0"
                                                       TextWrapping="Wrap"
                                                       TextTrimming="CharacterEllipsis"
                                                       Style="{ThemeResource BodyTextBlockStyle}"/>
                                            <Button Click="NavigateToLocation_Click"
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    VerticalAlignment="Center"
                                                    CornerRadius="4">
                                                <Button.Content>
                                                    <FontIcon Glyph="&#xE816;" />
                                                </Button.Content>
                                            </Button>
                                        </Grid>
                                        <Border Height="1"
                                                Background="{ThemeResource CardStrokeColorDefaultBrush}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <TextBlock x:Name="noLocationsTextBlock"
                                   Text="No nearby locations found."
                                   Visibility="Collapsed"
                                   HorizontalAlignment="Center"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Margin="0,12,0,0"/>
                        <TextBlock x:Name="locationErrorTextBlock"
                                   Text="Could not retrieve location."
                                   Visibility="Collapsed"
                                   HorizontalAlignment="Center"
                                   Style="{ThemeResource BodyTextBlockStyle}"
                                   Margin="0,12,0,0"/>
                        <TextBlock Text="Location data provided by © OpenStreetMap contributors and Nominatim."
                                   FontSize="12"
                                   HorizontalAlignment="Right"
                                   Style="{ThemeResource CaptionTextBlockStyle}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="1"
                Padding="12"
                Margin="8,0,8,8"
                CornerRadius="8"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Spacing="16">
                <Button Content="Edit"
                        Click="EditCard_Click"
                        Width="100"
                        CornerRadius="4"/>
                <Button Content="Delete"
                        Click="DeleteCard_Click"
                        Width="100"
                        CornerRadius="4"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>