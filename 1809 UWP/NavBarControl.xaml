<UserControl
    x:Class="_1809_UWP.NavbarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
            <Rectangle Fill="Black" Opacity="0.5" RadiusX="8" RadiusY="8" Margin="10"/>
            <Border HorizontalAlignment="Stretch" CornerRadius="8">
                <Border.Background>
                    <AcrylicBrush BackgroundSource="Backdrop" TintColor="#99000000" TintOpacity="0" FallbackColor="#2D2D2D" />
                </Border.Background>
            <Grid>
                <StackPanel Orientation="Vertical" Margin="5" Spacing="5">
                    <Button x:Name="HomeButton" Click="OnHomeClicked" CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE80F;" FontSize="24" Foreground="White"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="AddButton" Click="OnAddClicked" CornerRadius="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" FontSize="24" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Grid>
                    <StackPanel Orientation="Vertical" Margin="5" Spacing="5" VerticalAlignment="Bottom">
                        <Button x:Name="SettingsButton" Click="OnSettingsClicked" CornerRadius="4">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE713;" FontSize="24" Foreground="White"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
