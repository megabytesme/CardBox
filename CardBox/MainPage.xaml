<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CardBox"
             x:Class="CardBox.MainPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <local:NavbarControl Grid.Column="0" />

        <CollectionView ItemsSource="{Binding Cards}" Grid.Column="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10" Background="#05FFFFFF">
                        <StackLayout Spacing="10">
                            <Label Text="{Binding CardName}" />
                            <Button Text="View Card" Command="{Binding ViewCardCommand}" Margin="0,10"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
