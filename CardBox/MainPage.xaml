<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CardBox.MainPage">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackLayout Orientation="Vertical" Grid.Column="0" BackgroundColor="#80000000">
            <Button x:Name="BackButton" Style="{StaticResource PlatformButtonStyle}" Clicked="OnBackClicked" />
            <Button x:Name="HomeButton" Style="{StaticResource PlatformButtonStyle}" Clicked="OnHomeClicked" />
            <Button x:Name="AddButton" Style="{StaticResource PlatformButtonStyle}" Clicked="OnAddClicked" />
            <StackLayout VerticalOptions="EndAndExpand">
                <Button x:Name="SettingsButton" Style="{StaticResource PlatformButtonStyle}" Clicked="OnSettingsClicked" />
            </StackLayout>
        </StackLayout>

        <ScrollView Grid.Column="1">
            <CollectionView ItemsSource="{Binding Cards}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="10" HasShadow="True">
                            <StackLayout>
                                <Label Text="{Binding CardTitle}" />
                                <Button Text="View Card" Command="{Binding ViewCardCommand}" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </Grid>
</ContentPage>
